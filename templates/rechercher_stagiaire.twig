<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Rechercher un stagiaire</title>
		<link rel="stylesheet" href="../src/CSS/rechercher_stagiaire.css">
	</head>
	<body>
		<!-- Navbar -->
		<nav>
			<a href="index.php" ><img src="../src/icons/home.png" alt="Accueil">Accueil</a>
			<a href="entreprise.php"><img src="../src/icons/entreprise.png" alt="Entreprise">Entreprise</a>
			<a href="stagiaire.php" class="actif"><img src="../src/icons/stage.png" alt="Stagiaire">Stagiaire</a>
			<a href="inscription.php"><img src="../src/icons/inscrire.png" alt="Inscription">Inscription</a>
			<a href="aide.php"><img src="../src/icons/aide.png" alt="Aide">Aide</a>
			<a href="deconnexion.php"><img src="../src/icons/deconnexion.png" alt="Déconnexion">Déconnexion</a>

		</nav>

		<div class="content">
			<h1>Rechercher un stagiaire</h1>
			<div class="search-form">
				<form method="GET" action="rechercher_stagiaire.php">
					<label for="etudiant">Nom de l'étudiant :</label>
					<select name="etudiant" id="etudiant">
						<option value="">Sélectionner</option>
						{% for etudiant in etudiants %}
							<option value="{{ etudiant.nom_etudiant }}">{{ etudiant.nom_etudiant }}</option>
						{% endfor %}
					</select>

					<label for="entreprise">Entreprise :</label>
					<select name="entreprise" id="entreprise">
						<option value="">Sélectionner</option>
						{% for entreprise in entreprises %}
							<option value="{{ entreprise.raison_sociale }}">{{ entreprise.raison_sociale }}</option>
						{% endfor %}
					</select>

					<label for="professeur">Nom du professeur :</label>
					<select name="professeur" id="professeur">
						<option value="">Sélectionner</option>
						{% for professeur in professeurs %}
							<option value="{{ professeur.nom_prof }}">{{ professeur.nom_prof }}</option>
						{% endfor %}
					</select>

					<button type="submit">Rechercher</button>
				</form>

			</div>

			<table>
				<thead>
					<tr>
						<th>Nom Étudiant</th>
						<th>Entreprise</th>
						<th>Nom du Professeur</th>
					</tr>
				</thead>
				<tbody>
					{% if results is not empty %}
						{% for result in results %}
							<tr>
								<td>{{ result.etudiant }}</td>
								<td>{{ result.entreprise }}</td>
								<td>{{ result.professeur }}</td>
							</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="3">Aucun résultat trouvé</td>
						</tr>
					{% endif %}
				</tbody>
			</table>

		</div>
	</body>
</html>
