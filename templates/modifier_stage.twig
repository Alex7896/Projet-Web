		<td><input type="date" name="date_debut_stage"></td>
	</tr>
	<tr>
		<td>Date de fin de stage</td>
		<td><input type="date" name="date_fin_stage"></td>
	</tr>
	<tr>
		<td>Type de stage</td>
		<td>
			<select name="type_stage">
				<option value="aucun">Aucun</option>
				<option value="stage">Stage</option>
				<option value="alternance">Alternance</option>
			</select>
		</td>
	</tr>
	<tr>
		<td>Description du stage</td>
		<td>
			<textarea name="description_stage" class="large-text"></textarea>
		</td>
	</tr>
	<tr>
		<td>Observation</td>
		<td>
			<textarea name="observation" class="large-text"></textarea>
		</td>
	</tr>
</tbody></table><!-- Bouton d'ajout --><div style="margin-top: 20px;">
