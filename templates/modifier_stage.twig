<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="../src/CSS/inscription.css">

	</head>
	<body>
		<!-- Navbar -->
		<nav>
			<a href="index.php"><img src="../src/icons/home.png" alt="Accueil">Accueil</a>
			<a href="entreprise.php"><img src="../src/icons/entreprise.png" alt="Entreprise">Entreprise</a>
			<a href="stagiaire.php"><img src="../src/icons/stage.png" alt="Stagiaire">Stagiaire</a>
			<a href="inscription.php" class="actif"><img src="../src/icons/inscrire.png" alt="Inscription">Inscription</a>
			<a href="aide.php"><img src="../src/icons/aide.png" alt="Aide">Aide</a>
			<a href="deconnexion.php"><img src="../src/icons/deconnexion.png" alt="Déconnexion">Déconnexion</a>

		</nav>

		<!-- Contenu principal -->
		<div class="content">
			<h1>Formulaire de modification</h1>
			<form
				action="ajouter_inscription.php" method="POST">
				<!-- Premier tableau : Contact -->
				<table>
					<thead>
						<tr>
							<th colspan="2">Contact</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Entreprise</td>
							<td>
								<select name="entreprise" required>
									{% for entreprise in entreprises %}
										<option value="{{ entreprise.num_entreprise }}">
											{{ entreprise.raison_sociale }}
										</option>
									{% endfor %}
								</select>
							</td>
						</tr>
						<tr>
							<td>Étudiant</td>
							<td>
								<select name="etudiant" required>
									{% if etudiants is not empty %}
										{% for etudiant in etudiants %}
											<option value="{{ etudiant.num_etudiant }}">
												{{ etudiant.prenom_etudiant }}
												{{ etudiant.nom_etudiant }}
											</option>
										{% endfor %}
									{% else %}
										<option value="">Aucun étudiant disponible</option>
									{% endif %}
								</select>
							</td>
						</tr>

						<tr>
							<td>Professeur</td>
							<td>
								<select name="professeur" required>
									{% if professeurs is not empty %}
										{% for professeur in professeurs %}
											<option value="{{ professeur.num_prof }}">
												{{ professeur.prenom_prof }}
												{{ professeur.nom_prof }}
											</option>
										{% endfor %}
									{% else %}
										<option value="">Aucun professeur disponible</option>
									{% endif %}
								</select>
							</td>
						</tr>
					</tbody>
				</tr>
			</tbody>
		</body>
	</body>
</html></table><!-- Deuxième tableau : Description du stage --><table>
